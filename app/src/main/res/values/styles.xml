<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
        <item name="android:background">@drawable/ic_list</item>
    </style>

    <style name="normal_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bold_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_otp_text_view_style" parent="bold_text_view">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="login_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="login_otp_cart_view_style" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_170</item>
        <item name="android:layout_marginLeft">@dimen/dp_30</item>
        <item name="android:layout_marginRight">@dimen/dp_30</item>
        <item name="cardCornerRadius">@dimen/dp_10</item>
        <item name="cardElevation">@dimen/dp_10</item>
    </style>

    <style name="login_button_style" parent="normal_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
        <item name="android:background">@drawable/rounded_color_primary_btn_bg</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="slider_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="delivery_view_style">
        <item name="android:layout_width">@dimen/dp_15</item>
        <item name="android:layout_height">@dimen/dp_15</item>
        <item name="android:background">@drawable/color_primarty_dark_circle</item>
    </style>

    <style name="delivery_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="delivery_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="left_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="right_text_view_style">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="order_detail_text_view_style" parent="normal_text_view">
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="profile_text_view_style" parent="normal_text_view">
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_30</item>
        <item name="android:paddingRight">@dimen/dp_30</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="grey_horizontal_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/Grey_300</item>
    </style>

    <style name="home_card_view_style" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">@dimen/dp_5</item>
        <item name="cardCornerRadius">@dimen/dp_3</item>
    </style>

    <style name="home_btn_style" parent="normal_text_view">
        <item name="android:layout_width">@dimen/dp_150</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/gray_rounded_bg</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--TextView small-->
    <style name="small_txtView" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>
    <!--TextView meadium-->
    <style name="meadium_txtView" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    <!--TextView large-->
    <style name="large_txtView" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

</resources>
