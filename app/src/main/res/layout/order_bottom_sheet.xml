<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              app:behavior_hideable="true"
              app:behavior_peekHeight="@dimen/dp_70"
              app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/imvBottomSheet"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_up_arrow"/>



    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <shopinpager.wingstud.shopinpagerseller.custome.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:text="@string/user_detail"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:layout_alignParentRight="true">

                    <shopinpager.wingstud.shopinpagerseller.custome.TextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/call_user"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/colorPrimary"/>

                    <ImageView
                        android:id="@+id/imvCall"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/rounded_color_primary_btn_bg"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_phone_white"/>

                </LinearLayout>



            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_3"
                        app:cardCornerRadius="@dimen/dp_3">

                        <ImageView
                            android:id="@+id/imvCustImage"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:src="@drawable/profile_thumb"/>

                    </androidx.cardview.widget.CardView>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="vertical">

                        <shopinpager.wingstud.shopinpagerseller.custome.TextViewRegular
                            android:id="@+id/txtCustName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User's Name"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/gray"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:src="@drawable/ic_star"/>

                    <shopinpager.wingstud.shopinpagerseller.custome.TextViewRegular
                        android:id="@+id/txtCustRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="4.5"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_16"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <shopinpager.wingstud.shopinpagerseller.custome.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pickup_"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"/>


                <shopinpager.wingstud.shopinpagerseller.custome.TextViewRegular
                    android:id="@+id/txtPickUPAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <shopinpager.wingstud.shopinpagerseller.custome.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drop_"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"/>


                <shopinpager.wingstud.shopinpagerseller.custome.TextViewRegular
                    android:id="@+id/txtDropAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <shopinpager.wingstud.shopinpagerseller.custome.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fare"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"/>


                <shopinpager.wingstud.shopinpagerseller.custome.TextViewRegular
                    android:id="@+id/txtTotalFare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

            <shopinpager.wingstud.shopinpagerseller.custome.ButtonViewRegular
                android:id="@+id/btnChangeStatus"
                style="@style/login_button_style"
                android:layout_margin="@dimen/dp_20"
                android:visibility="visible"
                android:text="@string/accept"/>

            <LinearLayout
                android:id="@+id/llTollImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="@dimen/dp_10"
                android:orientation="vertical">

                <shopinpager.wingstud.shopinpagerseller.custome.ButtonViewRegular
                    android:id="@+id/btnCall"
                    style="@style/login_button_style"
                    android:layout_margin="@dimen/dp_10"
                    android:visibility="visible"
                    android:text="@string/pickup"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>