<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="loginViewModel"
            type="shopinpager.wingstud.shopinpagerseller.model.LoginViewModel" />
    </data>

    <ScrollView
        tools:context="shopinpager.wingstud.shopinpagerseller.activity.LoginActi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/topRL"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp">



                <LinearLayout
                    android:id="@+id/signinLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/signUpTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/sign"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@color/colorPrimary" />

                </LinearLayout>

                <TextView
                    android:paddingBottom="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/signinLL"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/in"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </RelativeLayout>
<!--            <androidx.cardview.widget.CardView-->
<!--                android:id="@+id/cardView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="@dimen/_10sdp"-->
<!--                android:elevation="4dp"-->
<!--                android:focusableInTouchMode="true"-->
<!--                app:cardCornerRadius="@dimen/_10sdp"-->
<!--                app:cardUseCompatPadding="true"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/topRL">-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_30sdp"
                    android:orientation="vertical">

                    <EditText
                        android:inputType="number"
                        android:id="@+id/etMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:drawableStart="@drawable/phone"
                        android:drawablePadding="@dimen/_15sdp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="@string/phone_number"
                        android:text="@={loginViewModel.MobileNo}"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/passwordEt"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:drawableStart="@drawable/password"
                        android:drawablePadding="@dimen/_15sdp"
                        android:text="@={loginViewModel.Password}"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="@string/password"
                        android:textSize="15sp" />


                </LinearLayout>

<!--            </androidx.cardview.widget.CardView>-->

            <shopinpager.wingstud.shopinpagerseller.custome.ButtonViewRegular
                android:id="@+id/btnLogin"
                style="@style/login_button_style"
                android:layout_width="@dimen/_150sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:onClick="@{(v)-> loginViewModel.onClick(v)}"
                android:text="@string/log_in" />

            <TextView
                android:id="@+id/forgotTv"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password"/>


            <View
                android:layout_margin="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <TextView
                android:fontFamily="@font/roboto_bold"
                android:id="@+id/sellerTv"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center"
                style="@style/large_txtView"
                android:text="@string/join_us_as_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ProgressBar

                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone" />
        </LinearLayout>


    </ScrollView>

</layout>
