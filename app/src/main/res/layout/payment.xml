<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/Grey_200"
        tools:context="shopinpager.wingstud.shopinpagerseller.fragment.Payment">


        <androidx.cardview.widget.CardView
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/large_txtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/today_payment"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/small_txtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/today_payment_des"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/meadium_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/amount"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/amountTv"
                        android:layout_alignParentEnd="true"
                        style="@style/meadium_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="Rs. 0"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textAllCaps="true"
                    android:background="@drawable/rounded_color_primary_btn_bg"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:elevation="4dp"
                    android:layout_gravity="end"
                    android:id="@+id/viewDetails"
                    style="@style/meadium_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/view_details"
                    android:textColor="@color/white" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/large_txtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/pending_payment"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/small_txtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/pending_payment_des"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/meadium_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/amount"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pend_amountTv"
                        android:layout_alignParentEnd="true"
                        style="@style/meadium_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="Rs. 0"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textAllCaps="true"
                    android:background="@drawable/rounded_color_primary_btn_bg"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:elevation="4dp"
                    android:layout_gravity="end"
                    android:id="@+id/pend_viewDetails"
                    style="@style/meadium_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/view_details"
                    android:textColor="@color/white" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/large_txtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/paid_payments"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/small_txtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/paid_payments_des"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/meadium_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/amount"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/paid_amountTv"
                        android:layout_alignParentEnd="true"
                        style="@style/meadium_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="Rs. 0"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textAllCaps="true"
                    android:background="@drawable/rounded_color_primary_btn_bg"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:elevation="4dp"
                    android:layout_gravity="end"
                    android:id="@+id/paid_viewDetails"
                    style="@style/meadium_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/view_details"
                    android:textColor="@color/white" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>

