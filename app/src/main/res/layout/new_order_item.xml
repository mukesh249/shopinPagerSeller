<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data></data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/rounded_corner_white_bg"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                   >
                    <ImageView
                        android:id="@+id/productImage1"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/product"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/productImage2"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/demo_product"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layouImae2"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_height="0dp">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/productImage3"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/demo_product"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/productImage4"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/demo_product"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/order_id"/>
                    <TextView
                        android:id="@+id/oderId"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#sfgg12"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/order_date"/>
                    <TextView
                        android:id="@+id/orderdate"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13-sep-2019,01,01:26 am"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/number_of_products"/>
                    <TextView
                        android:id="@+id/numOfProducts"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/total_amount"/>
                    <TextView
                        android:id="@+id/amountTv"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 600"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/purple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/qty"/>
                    <TextView
                        android:id="@+id/qtyTb"
                        android:textStyle="bold"
                        android:textColor="@color/purple"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12sp"
                        android:id="@+id/txtAddress"
                        android:text="@string/address"
                        android:textAllCaps="false"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_color_primary_btn_bg"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="12sp"
                        android:id="@+id/viewDetails"
                        android:text="@string/view_details"
                        android:textAllCaps="false"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:background="@drawable/color_primary_rounded_border"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/assignTv"
                android:text="@string/assign_to_rider"
                android:textAllCaps="true"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:background="@drawable/round_green"
                android:layout_width="0dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/cancelTv"
                android:text="@string/cancel_order"
                android:textAllCaps="true"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:background="@drawable/round_red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>
</layout>